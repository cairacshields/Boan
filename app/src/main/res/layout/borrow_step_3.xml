<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/borrow_step_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        >

        <TextView
            android:id="@+id/header"
            style="@style/Text_black_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_padding"
            android:gravity="center_horizontal"
            android:text="Let’s tell the lender’s what you need!" />

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:id="@+id/step_3_text_container"
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/step_3_text"
                style="@style/Bold_4_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/base_padding"
                android:gravity="center_horizontal"
                android:text="Step 3." />
            <ImageButton
                android:background="?selectableItemBackground"
                android:id="@+id/submit_request"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_double_arrow_orange"
                />
        </LinearLayout>
        <EditText
            android:id="@+id/borrow_reason"
            android:elevation="@dimen/base_padding"
            android:height="200dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/step_3_text_container"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/medium_margin"
            android:padding="@dimen/base_padding"
            android:hint="Why are you borrowing?"
            android:gravity="top"
            android:textColor="@color/white" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/ic_bermuda_fatal_error"
            />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>