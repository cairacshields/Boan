<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Bold_1">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">100sp</item>
    </style>

    <style name="Bold_2">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">70sp</item>
    </style>

    <style name="Bold_3_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="Bold_4_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="Bold_5_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text_small">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Text_white">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text_black">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text_black_bold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text_black_medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Text_grey">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Text_grey_medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

</resources>
